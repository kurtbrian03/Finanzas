# ================================================================
# .env.example — Plantilla oficial de configuración (Finanzas)
# ================================================================
# Este archivo define la base de variables de entorno para:
# - Desarrollo local
# - Staging / QA
# - Producción
#
# Regla de seguridad:
# - Nunca guardar secretos reales en este archivo.
# - Copiar a .env y completar valores según el entorno.

# ----------------------------------------------------------------
# 1) Modo de ejecución y depuración
# ----------------------------------------------------------------
# Control del modo de depuración (True para desarrollo, False para producción)
DEBUG_MODE=false

# ----------------------------------------------------------------
# 2) Autenticación del explorador (Dropbox Explorer)
# ----------------------------------------------------------------
# Contraseña del administrador (correo fijo configurado en la app)
DROPBOX_ADMIN_PASS=

# Contraseñas de roles secundarios
DROPBOX_AUDITOR_PASS=
DROPBOX_READONLY_PASS=

# ----------------------------------------------------------------
# 3) Rutas principales del proyecto
# ----------------------------------------------------------------
# Ruta raíz donde se encuentran los documentos de facturación
FACTURACION_PATH=C:/Users/usuario/Dropbox/FACTURACION

# Ruta donde se almacenan logs locales
LOGS_PATH=./logs

# Ruta donde se guardan archivos temporales
TEMP_PATH=./temp

# ----------------------------------------------------------------
# 4) Servidor y puertos
# ----------------------------------------------------------------
# Puerto donde se ejecuta la aplicación Streamlit
STREAMLIT_PORT=8501

# Host del servidor (0.0.0.0 para producción, localhost para desarrollo)
STREAMLIT_HOST=localhost

# ----------------------------------------------------------------
# 5) Flags de módulos internos
# ----------------------------------------------------------------
# Activar o desactivar módulos internos
ENABLE_DROPBOX_EXPLORER=true
ENABLE_DASHBOARD_RECEPTOR=true
ENABLE_VALIDACION_RFC=true
ENABLE_HISTORIAL=true

# ----------------------------------------------------------------
# 6) Variables reservadas para producción
# ----------------------------------------------------------------
# Variables reservadas para producción (no incluir valores reales aquí)
API_KEY_SAT=
API_KEY_DROPBOX=
SECRET_KEY_APP=
